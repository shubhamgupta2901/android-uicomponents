<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dots="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".samples.waitingdotsSample.WaitingDotsSampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout">

        <TextView
            android:text="Typing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_light"
            android:textSize="45sp" />

        <sg.com.uicomponent_waitingdots.DotsTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dots"
            android:textSize="45sp"
            android:textColor="@android:color/primary_text_light"
            dots:autoplay="false"
            dots:period="1000"/>

    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="play/pause"
        android:textAllCaps="true"
        android:id="@+id/buttonPlay"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="show/hide"
        android:textAllCaps="true"
        android:id="@+id/buttonHide"
        android:layout_below="@+id/buttonPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="show/hide with pause"
        android:textAllCaps="true"
        android:id="@+id/buttonHideAndStop"
        android:layout_below="@+id/buttonHide"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>